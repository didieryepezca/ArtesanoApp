<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_categoria"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/artesanoYellow"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_card_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/item_card_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textColor="@color/black"
            android:fontFamily="@font/sansita_bolditalic"
            android:layout_toEndOf="@+id/item_card_image"
            android:layout_toRightOf="@+id/item_card_image"
            android:layout_alignParentTop="true"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/item_card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:textColor="@color/black"
            android:fontFamily="@font/sansita_regular"
            android:layout_toEndOf="@+id/item_card_image"
            android:layout_toRightOf="@+id/item_card_image"
            android:layout_below="@+id/item_card_tittle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:orientation="vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/item_card_description">
            <Button
                android:id="@+id/btnEditCategoria"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:background="@color/black"
                android:text="Editar"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:clickable="true"
                android:textSize="7sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>